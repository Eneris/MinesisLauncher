{
  "name": "minesis-launcher",
  "version": "1.1.0",
  "description": "",
  "main": "build/electron.js",
  "scripts": {
    "build": "npx webpack --mode=production",
    "build:dev": "npx webpack --mode=development",
    "package": "npx electron-builder -mwl && node ./createBuildJson.js",
    "dev:app": "npx webpack-dev-server --hot",
    "dev:electron": "npx electron ./build/electron.js",
    "dev": "npm run build && npx concurrently \"npx cross-env BROWSER=none npm run dev:app\" \"wait-on http://localhost:8080 && npm run dev:electron\"",
    "start": "npm run build",
    "postinstall": "npx electron-builder install-app-deps"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.7.7",
    "@babel/polyfill": "^7.7.0",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "@eneris/minecraft-client": "^3.1.1",
    "@fortawesome/fontawesome-svg-core": "^1.2.26",
    "@fortawesome/free-brands-svg-icons": "^5.12.1",
    "@fortawesome/free-solid-svg-icons": "^5.12.0",
    "@fortawesome/react-fontawesome": "^0.1.8",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "babel-loader": "^8.3.0",
    "classnames": "^2.2.6",
    "concurrently": "^5.0.2",
    "cross-env": "^6.0.3",
    "css-loader": "^6.7.3",
    "electron": "^7.2.4",
    "electron-builder": "^21.2.0",
    "electron-devtools-installer": "^2.2.4",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "i": "^0.3.6",
    "node-sass": "^4.13.1",
    "npm": "^6.14.6",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-hot-loader": "^4.13.1",
    "sass-loader": "^13.2.0",
    "style-loader": "^1.3.0",
    "ts-loader": "^9.4.2",
    "typescript": "^3.7.4",
    "wait-on": "^3.3.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^3.10.1"
  },
  "dependencies": {},
  "build": {
    "appId": "com.minesis.launcher",
    "nodeGypRebuild": false,
    "npmRebuild": true,
    "icon": "./src/electron/resources/icon.png",
    "files": [
      "./build/**/*",
      "./src/electron/resources/*"
    ],
    "mac": {
      "category": "public.app-category.games"
    }
  }
}
